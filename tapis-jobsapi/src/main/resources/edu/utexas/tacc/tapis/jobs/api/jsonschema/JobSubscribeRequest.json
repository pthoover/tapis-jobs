{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://tapis.tacc.utexas.edu/JobSubscribeRequest",
    "description": "Job subscription request",
    "additionalProperties": false,
    "type": "object",
        "properties": {
          "description": {
            "$comment": "Human readable job description",
            "type": "string",
            "minLength": 1,
            "maxLength": 2048
          },
          "enabled": {
            "$comment": "Whether the subscription is enabled, default=true",
            "type": "boolean",
            "default": true
          },
          "ttlMinutes": {
            "$comment": "Time-to-live in minutes for this subscription",
            "type": "integer",
            "minimum": 1
          },
          "eventType": {
            "$comment": "Type of job events to which this subscription applies",
            "type": "string", "minLength": 1, "maxLength": 64,
            "enum": [ "JOB_NEW_STATUS", "JOB_INPUT_TRANSACTION_ID", "JOB_ARCHIVE_TRANSACTION_ID", "JOB_ERROR_MESSAGE", "JOB_SUBSCRIPTION" ]
          },
          "deliveryTargets": {
            "$comment": "Notification receivers",
            "type": "array",
            "minItems": 1,
            "items": {"$ref": "#/$defs/DeliveryTarget"},
            "uniqueItems": true
          }
       },
    "required": [
        "ttlMinutes",
        "eventType",
        "deliveryTargets"
    ],
    "$defs": {
        "DeliveryTarget": {
            "comment": "How and where notifications get delivered",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "deliveryMethod":  { 
                    "type": "string", "minLength": 1, "maxLength": 64, 
                    "enum": [ "WEBHOOK", "EMAIL", "QUEUE", "ACTOR" ]
                 },
                "deliveryAddress": { "type": "string", "minLength": 1, "maxLength": 2048 }
            }
        }
    }
}
